<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title> <%= title %> </title>
    <style type="text/css">
        body {
            padding: 50px;
            font: 13px Helvetica, Arial, sans-serif;
        }
    </style>
</head>
<body>
  <h1>Welcome to Githood. This is <%= description %>.</h1>

  <h4>Shared Repositories</h4>
  <% sharedRepos.forEach(function(repo) { %>
    <% var stars = ''; for (var i = 0; i < repo.watchers.length; i++) { stars += '*'; } %>
    <p><%= gitUrlPrefix %>/<%= repo.name %> <%= stars %></p>
  <% }); %>
</body>
</html>
